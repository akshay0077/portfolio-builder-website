{
  "name": "portfolio-builder",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env  next build",
    "dev": "cross-env  next dev",
    "devsafe": "rm -rf .next && cross-env  next dev",
    "generate:importmap": "cross-env  payload generate:importmap",
    "generate:types": "cross-env  payload generate:types",
    "lint": "cross-env next lint",
    "lint:fix": "cross-env next lint --fix",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,md}'",
    "payload": "cross-env  payload",
    "start": "cross-env  next start",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@payloadcms/db-postgres": "latest",
    "@payloadcms/next": "latest",
    "@payloadcms/plugin-seo": "^3.26.0",
    "@payloadcms/richtext-lexical": "latest",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/postcss": "^4.0.9",
    "@tanstack/react-query": "^5.67.2",
    "cross-env": "^7.0.3",
    "framer-motion": "^12.4.10",
    "graphql": "^16.8.1",
    "next": "15.1.5",
    "payload": "latest",
    "postcss": "^8.5.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-icons": "^5.5.0",
    "sharp": "0.32.6",
    "tailwindcss": "^4.0.9"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@types/node": "^22.5.4",
    "@types/react": "19.0.7",
    "@types/react-dom": "19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.21.0",
    "eslint-config-next": "15.1.5",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "next lint --fix --file",
      "prettier --write"
    ]
  }
}
